<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paperRootView"
    android:layout_width="138dp"
    android:layout_height="184dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtPaperAppearanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:hint="Title"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPaperAppearanceItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="(Content...)"
            android:maxLines="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtPaperAppearanceItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtPaperAppearanceItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtPaperAppearanceItem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>