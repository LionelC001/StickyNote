<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3186d6</item>
        <item name="colorPrimaryDark">#0a67be</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorToolbar</item>
    </style>

    <style name="PaperContentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyFloatingButtonLabelStyle">
        <item name="android:background">@drawable/floating_button_label_background</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyPopupTheme">
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- button click effort -->
    <style name="ButtonClickEffort">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
